<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/buttons"
        android:layout_width="match_parent"
        android:layout_height="53dp"
        android:layout_alignParentBottom="true"
        android:background="@android:color/holo_red_light">

        <Button
            android:id="@+id/moveLeft"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/move_left" />

        <Button
            android:id="@+id/moveRight"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/move_right" />

        <Button
            android:id="@+id/moveUp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/move_up" />

        <Button
            android:id="@+id/moveDown"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/move_down" />

    </LinearLayout>

    <org.pondar.pacmankotlin.GameView
        android:id="@+id/gameView"
        android:layout_width="match_parent"
        android:layout_height="588dp"
        android:layout_marginTop="40dp"
        android:layout_weight="1"></org.pondar.pacmankotlin.GameView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="53dp"
        android:orientation="horizontal"
        android:background="@android:color/holo_red_light">>

        <Button
            android:id="@+id/reset"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:text="@string/reset" />

        <Button
            android:id="@+id/start"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:text="@string/start" />

        <Button
            android:id="@+id/pause"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:text="@string/pause" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="45dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/pointsView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/points"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/timerLeft"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:text="@string/timeLeft"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/timer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:text="@string/timer"
            android:textSize="20sp" />
    </LinearLayout>


    <!-- Notice how the custom view is referenced here with
    a full package path-->


</RelativeLayout>
